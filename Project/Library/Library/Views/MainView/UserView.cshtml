@{
    ViewBag.Title = "UserView";
    Layout = "~/Views/Shared/_LayoutUserPage.cshtml";
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
    body {
        font-family: Arial;
        color: white;
    }


    .split {
        height: 100%;
        width: 50%;
        position: fixed;
        z-index: 1;
        top: 0;
        overflow-x: hidden;
        padding-top: 20px;
    }

    .part-one {
        left: 0;
        /*flex: 1;*/
        height: 100%;
        background: url("https://images.unsplash.com/photo-1568667256531-7d5ac92eaa7a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=658&q=80");
        background-size: cover;
        background-position: 50% 15%;
    }

    .part-two {
        right: 0;
        /*flex: 1;*/
        height: 100%;
        background-size: cover;
        background-position: 50% 15%;
    }

    .content {
        min-height: 450px;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .content .nev {
            flex: 1;
            border-bottom: 1pt solid #e7e7e7;
            display: flex;
        }

    .content .nev ul {
                flex: 1;
                font-family: Arial,sans-serif;
                list-style-type: none;
            }

    .content .nev .right-links {
                display: flex;
                justify-content: flex-end;
                color: black;
            }

    .content .nav .right-links li {
            margin-right: 10px;
        }

    .content .hero {
            display: flex;
            flex: 8;
            justify-content: center;
            align-items: center;
        }

    .content .hero h2 {
                font-family: 'Pacifico', cursive;
                font-style: italic;
                color: #e5474b;
                font-weight: lighter;
            }

    .hero-contents {
        font-family: 'Poppins', sans-serif;
        flex-direction: column;
    }

    .hero-contents button {
            background-color: transparent;
            box-shadow: inset 0 0 0 2px #e5474b;
            color: #e5474b !important;
            padding-top: 10px;
            padding-bottom: 10px;
            outline: none;
            cursor: pointer;
            transition: background 0.15s ease-in;
            font-weight: bold;
            text-transform: uppercase;
            font-family: 'Poppins', sans-serif;
            justify-content: center;
            align-items: center;
            display: block;
            margin: 0 0 1em 0;
            width: 100%;
        }

    .hero-contents a.button {
            background-color: transparent;
            box-shadow: inset 0 0 0 2px #e5474b;
            color: #e5474b !important;
            outline: none;
            cursor: pointer;
            transition: background 0.15s ease-in;
            font-weight: bold;
            text-transform: uppercase;
            font-family: 'Poppins', sans-serif;
            font-size:medium;
            justify-content: center;
            align-items: center;
            display: block;
            margin: 0 0 1em 0;
            width: 100%;
        }

    .hero-contents a.button:hover{
        background:#808080 !important;
    }

    .content footer {
        flex: 1;
        border-top: 1pt solid #e7e7e7;
    }
</style>

<html>
<head>
</head>
<body>
    <div class="split part-one">
    </div>

    <div class="split part-two">
        <div class="content">
            <div class="hero">
                <div class="hero-contents">
                    <h2>Welcome To Our Website Library :)</h2>
                    <br>
                    <br>
                    <br>
                    <br>
                    <a class="button" href="~/Users/SignUp">Register</a>
                    <a class="button" href="~/Users/LogIn">LogIn</a>
                </div>
            </div>
            <footer></footer>
        </div>
    </div>
</body>
</html>
